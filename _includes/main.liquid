    <header class="header mw8 center mb5">
      <a href="/">
        <h1><img
          src="/assets/logo.svg"
          alt="HEX"
          width="200"></h1>
      </a>
    </header>
    <main class="mw8 center flex flex-wrap justify-between" id="main">
      <div class="flex-auto measure-wide">
        {{ content }}
      </div>
      <aside class="w5-l w-100 flex-shrink-0 pl5-l mt5-m flex flex-column gap4">
